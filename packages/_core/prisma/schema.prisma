generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ListingSource {
  LISTAM
}

enum ListingType {
  SELL
  RENT
}

enum BuildingType {
  STONE
  PANEL
  MONOLITH
}

enum RenovationType {
  ZERO
  OLD
  LIGHT
  AVERAGE
  MODERN
  ADVANCED
}

enum City {
  YEREVAN
}

enum District {
  // Yerevan
  AJAPNYAK
  ARABKIR
  AVAN
  DAVITASHEN
  EREBUNI
  QANAQER
  KENTRON
  MALATIA
  NORQ
  SHENGAVIT
  NORQMARASH
  NUBARASHEN
}


model ListingApartment {
  id         Int      @id @default(autoincrement())
  source     ListingSource
  type       ListingType
  extId      String   @db.VarChar(255)
  extUrl     String   @db.VarChar(255)

  rawPrice   String?   @db.VarChar(255)
  rawTitle   String?   @db.VarChar(255)
  rawMeta    String?   @db.VarChar(255)
  rawExcerpt String?
  rawContent String?

  city       City
  district   District
  address    String?     @db.VarChar(255)

  buildingType BuildingType?
  renovationType RenovationType?

  statNoRooms Int
  statArea    Float
  statPriceAmd Float
  statPriceUsd Float
  statPricePerMeterAmd Float
  statPricePerMeterUsd Float
  statExchangeRate Float
  statBuildingFloors Int
  statFloor Int
  statFloorIsLast Boolean? @default(false)
  statFloorIsFirst Boolean? @default(false)

  date DateTime @default(now())
  isProcessed Boolean? @default(false)
  isUnavailable Boolean? @default(false)
  extUpdatedAt DateTime?
  extCreatedAt DateTime?
  updatedAt DateTime    @updatedAt
  createdAt DateTime    @default(now())
  meta  Json?
}



